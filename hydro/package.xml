  <build_depend>texlive-fonts-recommended</build_depend>
  <build_depend>texlive-latex-base</build_depend>
  <build_depend>texlive-latex-extra</build_depend>
  <build_depend>texlive-latex-recommended</build_depend>
  <build_depend>zlib</build_depend>

  <buildtool_depend>cmake</buildtool_depend>

  <run_depend>catkin</run_depend>
  <run_depend>ffmpeg</run_depend>
  <run_depend>gtk2</run_depend>
  <run_depend>jasper</run_depend>
  <run_depend>libjpeg</run_depend>
  <run_depend>libpng12-dev</run_depend>
  <run_depend>libtiff-dev</run_depend>
  <run_depend>libv4l-dev</run_depend>
  <run_depend>python</run_depend>
