<?xml version="1.0"?>
<package>
  <name>opencv2_doc</name>
  <version>:{version}</version>
  <description>OpenCV documentation</description>
  <maintainer email="vincent.rabaud@gmail.com">Vincent Rabaud</maintainer>
  <license>BSD</license>

  <url type="website">http://opencvg.org</url>
  <url type="bugtracker">http://code.opencv.org/projects/opencv/issues</url>
  <url type="repository">https://github.com/itseez/opencv</url>

  <author>The OpenCV team</author>

